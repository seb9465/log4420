extends layout

block content
	include ./views/publications-variables
	
	h1 Publications 
	button Ajouter une publication
	
	section
		i.fa.fa-window-close.fa-2x.close-button
		h1 Création d'une publication
		form
			span Année :&nbsp;
			input(type="number" name="year" value="2020" min="1900" max="2099")
			br
			span Mois :&nbsp;
			input(list="months" name="month" required)
			br
			span Titre :&nbsp;
			input(type="text" name="title" required)
			br
			span Auteurs :
			br
			input(type="text" name="auteurs" required)
			br
			i.fa.fa-plus.fa-3x
			br
			span Conférence :&nbsp;
			input(type="text" name="conference" required)
			br
			input(type="submit" value="Créer")

			datalist(id="months")
				option(value="Janvier")
				option(value="Février")
				option(value="Mars")
				option(value="Avril")
				option(value="Mai")
				option(value="Juin")
				option(value="Juillet")
				option(value="Aout")
				option(value="Septembre")
				option(value="Octobre")
				option(value="Novembre")
				option(value="Décembre")
	span Trié par :&nbsp;
	